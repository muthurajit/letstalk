<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCannotSpeak"
        android:contentDescription="Button I cannot speak"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textColor="#FFFFFFFF"
        android:background="#FF0000FF"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/i_cannot_speak" />

    <Button
        android:id="@+id/buttonCannotHear"
        android:contentDescription="Button I cannot hear"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textColor="#FFFFFFFF"
        android:background="#FF0000FF"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonCannotSpeak"
        android:text="@string/i_cannot_hear" />

</RelativeLayout>
